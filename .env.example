# =================================
# DATABASE CONFIGURATION
# =================================

# URL complète de connexion PostgreSQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://area_user:CHANGE_ME_STRONG_PASSWORD@localhost:5432/area_db"

# Paramètres individuels (utilisés pour les scripts)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=area_db
DATABASE_USER=area_user
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Pool de connexions
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Clé de chiffrement pour les tokens OAuth (MINIMUM 32 caractères)
# Générer avec: openssl rand -base64 32
DATABASE_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_32_CHARS

# =================================
# APPLICATION
# =================================

NODE_ENV=development
PORT=8080

# =================================
# JWT TOKENS
# =================================

# Générer avec: openssl rand -base64 32
ACCESS_TOKEN_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL
REFRESH_TOKEN_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL

# =================================
# OAUTH2 PROVIDERS
# =================================

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Twitter/X OAuth
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =================================
# EMAIL (pour vérification)
# =================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@area.com